<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:theme="@android:style/Theme.NoTitleBar"
    tools:context="com.example.shamr.LoginActivity" >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/combinedlogo"
        android:layout_marginTop="50dp" />
    
    <TextView
        android:id="@+id/login_dialog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/login_dialog"
        android:textColor="@color/white"
        android:textSize="15sp" 
        android:layout_marginBottom="30dp"
        android:layout_marginTop="60dp"/>
    
    <Button
        android:id="@+id/button1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/fb_login_button"
        android:background="@color/fb_blue"
        android:onClick="onLoginTapped"
        android:layout_marginBottom="15dp" />
    
    
</LinearLayout>
 